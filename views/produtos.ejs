<!DOCTYPE html>
<html lang="en">

<head>
    <title><%= titulo %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body style="text-align: center;">

    <h1 class="card text-white bg-primary">
        <div class="card-body">
            <p class="card-text"><%= titulo %></p>
            <h4 class="card-text">Produtos cadastrados no sistema</h4>
        </div>
    </h1>

    <div class="mt-3">
        <a class="btn btn-primary" href="/novoProduto">Novo</a>
        <a class="btn btn-secondary" href="/principal">Voltar</a>
    </div>

    <table class="table mt-4">
        <thead>
            <tr style="background-color: #ccc;">
                <th style="width: 10%;">Código</th>
                <th style="width: 20%;">Nome</th>
                <th style="width: 30%;">Descrição</th>
                <th style="width: 15%;">Preço</th>
                <th style="width: 15%;">Estoque</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% if (!registros || registros.length === 0) { %>
                <tr>
                    <td colspan="6" class="text-center">Nenhum produto cadastrado</td>
                </tr>
            <% } else {
                registros.forEach(function (produto) { %>
                <tr>
                    <td><%= produto.id_produto %></td>
                    <td><%= produto.nome_produto %></td>
                    <td><%= produto.descricao_produto %></td>
                    <td><%= produto.preco_produto %></td>
                    <td><%= produto.estoque_produto %></td>
                    <td>
                        <a href="/alterarProduto/<%= produto.id_produto %>" class="btn btn-warning btn-sm">Alterar</a>
                        <a href="/excluirProduto/<%= produto.id_produto %>" class="btn btn-danger btn-sm" onclick="return confirm('Deseja excluir este produto?');">Excluir</a>
                    </td>
                </tr>
            <% }) } %>
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>